#!/usr/bin/env zsh

TIME=$(date "+%H%M")
zzz=$'ðŸ’¤\uFE0E'

if (($TIME > 0100 && $TIME < 0800))
then
	if (($TIME > 0230))
	then
		echo "<span color='#000000' background='#ff2200'>$zzz sleep</span>"
	elif (($TIME > 0200))
	then
		echo "<span color='#ff4400'>$zzz sleep</span>"
	else
		echo "<span color='#ff8800'>$zzz sleep</span>"
	fi

	exit
fi

echo ""
