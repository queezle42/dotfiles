#!/usr/bin/env zsh

TIME=$(date "+%H%M")
zzz=$'ðŸ’¤\uFE0E'

if (($TIME > 0100 && $TIME < 0800))
then
	if (($TIME > 0230))
	then
		echo "$zzz sleep"
		exit 33
	elif (($TIME > 0200))
	then
		echo "$zzz sleep"
		exit 32
	else
		echo "$zzz sleep"
		exit 31
	fi

	exit
fi

echo ""
