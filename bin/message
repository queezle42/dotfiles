#!/usr/bin/env zsh

message="We are experiencing technical difficulties
Please stand by..."

tty_num=13

tty="/dev/tty$tty_num"

# Change tty
chvt "$tty_num"

reset() {
	# Clear screen
	printf "\e[3J" > $tty
	# Reset cursor position
	printf "\033[0;0H" > $tty
}

reset
sleep 1

# print character char by char
for (( i=0; i<${#message}; i++ ))
do
	print -n "${message:$i:1}" > $tty
	sleep 0.1
done

# keep screen clear of error messages
while true
do
	sleep 10
	reset
	print -n "${message}" > $tty
done
